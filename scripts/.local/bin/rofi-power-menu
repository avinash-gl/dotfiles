# ~/.config/i3/scripts/powermenu.sh
#!/bin/bash

shutdown=' 󰐥 '
reboot='  '
lock='  '
suspend='  '
logout=' 󰍃 '

chosen=$(echo -e "$suspend\n$logout\n$reboot\n$shutdown" | rofi -dmenu -theme ~/.config/rofi/themes/powermenu_v.rasi )

case "$chosen" in
    "$suspend") systemctl suspend  ;;
    "$logout")  i3-msg exit ;;
    "$reboot") reboot ;;
    "$shutdown") poweroff ;;
esac
